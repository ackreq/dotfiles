" ------------------------------------------ base ---
syntax on
set nobackup
set clipboard=unnamedplus
set completeopt=menuone,noselect
set conceallevel=0
set fileencoding=utf-8
set hlsearch
set ignorecase
set mouse=a
set pumheight=10
set showmode
set smartcase
set smartindent
set splitbelow
set splitright
set noswapfile
set timeoutlen=300
set updatetime=300
set nowritebackup
set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4
set number
" set relativenumber
set numberwidth=4
set nowrap
set linebreak
set scrolloff=18
set sidescrolloff=20
set guifont=monospace:h17
set whichwrap=bs<>[]hl
" set termguicolors

inoremap { {}<Esc>ha
inoremap ( ()<Esc>ha
inoremap [ []<Esc>ha
inoremap " ""<Esc>ha
inoremap ' ''<Esc>ha
inoremap ` ``<Esc>ha

" -------------------------------------- personal ---
" colorscheme 256noir
" set cursorline
" set signcolumn=yes
